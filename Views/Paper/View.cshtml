@using Conference_Management_System.Models
@model dynamic
@{
    ViewData["Title"] = "View";
}

<div class="border p-3 nt-4">
    <div class="row pb-2">
        <div class="col-6">
            <h2 class="text-primary">@Model.Paper.Title</h2>
        </div>
    </div>
    <dl class="row">
        <dt class="col-sm-2">
            Author
        </dt>
        <dd class="col-sm-10">
            @Model.Paper.Author
        </dd>
        <dt class="col-sm-2">
            Conference
        </dt>
        <dd class="col-sm-10">
            @Model.Paper.Conference
        </dd>
        <dt class="col-sm-2">
            Expertises
        </dt>
        <dd class="col-sm-10">
            @Model.Paper.Expertises
        </dd>
        <dt class="col-sm-2">
            Date Published
        </dt>
        <dd class="col-sm-10">
            @Model.Paper.DatePublished
        </dd>
    </dl>
    <a asp-controller="Paper" asp-action="Download" class="btn btn-primary mx-2" asp-route-id="@Model.Paper.Id">Download</a>
    <br />
    <br />
    <table class="table-bordered table-striped" width="100%">
        <thead>
            <tr class="table-info">
                <th width="25%">
                    Reviewer Name
                </th>
                <th width="15%">
                    Status
                </th>
                <th width="5%">
                    Rating
                </th>
                <th>
                    Comments
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var review in Model.Reviews)
            {
                <tr>
                    <td>
                        @review.ReviewerName
                    </td>
                    <td>
                        @review.Status
                    </td>
                    <td>
                        @review.Rating
                    </td>
                    <td>
                        @review.Comments
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<br />
<a href="javascript:history.go(-1)" class="btn btn-secondary" style="width:150px">
    Back
</a>

