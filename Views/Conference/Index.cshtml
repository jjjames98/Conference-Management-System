@model IEnumerable<Conference>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">My Conferences</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Conference" asp-action="Create" class="btn btn-primary">Create New Conference</a>
        </div>
    </div>
</div>

<table class="table-bordered table-striped" width="100%">
    <thead>
        <tr class="table-info">
            <th>
                Conference Name
            </th>
            <th width="15%">
                Conference Date
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Conference" asp-action="View" asp-route-id="@obj.Id">@obj.Name</a>
                </td>
                <td>
                    @obj.ConferenceDate
                </td>
            </tr>
        }
    </tbody>
</table>

