@using Conference_Management_System.Models
@model dynamic
@{
    ViewData["Title"] = "View";
}

<div class="border p-3 nt-4">
	<div class="row pb-2">
        <div class="col-6">
		    <h2 class="text-primary">@Model.Conference.Name)</h2>
		</div>
    </div>
    <dl class="row">
        <dt class="col-sm-2">
            Conference Chair
        </dt>
        <dd class="col-sm-10">
            @Model.Conference.ConferenceChair
        </dd>
        <dt class="col-sm-2">
            Expertise
        </dt>
        <dd class="col-sm-10">
            @Model.Conference.Expertise
        </dd>
        <dt class="col-sm-2">
            ConferenceDate
        </dt>
        <dd class="col-sm-10">
            @Model.Conference.ConferenceDate
        </dd>
    </dl>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Paper Title
            </th>
            <th>
                Author
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var paper in Model.Papers)
        {
            <tr>
                <td>
                    <a asp-controller="Paper" asp-action="View" asp-route-id="@paper.Id">@paper.Title</a>
                </td>
                <td>
                    @paper.Author
                </td>
                <td>
                    <a asp-controller="Conference" asp-action="Decline" asp-route-id="@paper.Id"
                    class="btn btn-danger" style="width:150px">Decline</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="javascript:history.go(-1)" class="btn btn-secondary" style="width:150px">
    Back
</a>

